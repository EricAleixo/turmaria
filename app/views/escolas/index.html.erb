<div class="drawer lg:drawer-open bg-gray-100">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />

  <div class="drawer-content flex flex-col items-center">
    
    <div class="w-full p-4">
      <div class="flex items-center mb-6 lg:hidden">
        <label for="my-drawer" class="btn btn-square btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </label>
        <h1 class="text-xl font-bold ml-2">Escolas</h1>
      </div>

      <main class="w-full max-w-4xl mx-auto">
        <div class="bg-white p-8 rounded-lg shadow-md">
          <div class="flex justify-between items-center mb-8 border-b pb-4">
            <h1 class="text-2xl font-bold text-gray-700">Escolas</h1>
            <%= link_to "Nova Escola", new_escola_path, class: "btn bg-green-500 hover:bg-green-600 text-white", title: "Adicionar nova escola" %>
          </div>

          <% if @escolas.any? %>
            <!-- Desktop Table View -->
            <div class="hidden md:block overflow-x-auto">
              <table class="table w-full">
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>CNPJ</th>
                    <th>Turmas</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% @escolas.each do |escola| %>
                    <tr>
                      <td><%= escola.nome %></td>
                      <td><%= escola.cnpj.present? ? escola.cnpj : "Não informado" %></td>
                      <td><%= escola.turmas.count %></td>
                      <td>
                        <div class="flex gap-2">
                          <%= link_to escola_path(escola), class: "btn btn-ghost btn-sm text-blue-600 hover:text-blue-800", title: "Ver escola" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                          <% end %>
                          <%= link_to edit_escola_path(escola), class: "btn bg-gradient-to-r from-blue-500 to-teal-500 hover:from-blue-600 hover:to-teal-600 text-white border-0 btn-sm", title: "Editar escola" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                            </svg>
                          <% end %>
                          <label for="delete-modal-<%= escola.id %>" class="btn bg-red-600 btn-sm text-white" title="Excluir escola">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>
                          </label>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <!-- Mobile Card View -->
            <div class="md:hidden space-y-4">
              <% @escolas.each do |escola| %>
                <div class="card bg-base-100 shadow-md border">
                  <div class="card-body p-4">
                    <div class="flex justify-between items-start mb-3">
                      <div class="flex-1">
                        <h3 class="card-title text-lg font-bold text-gray-800"><%= escola.nome %></h3>
                        <p class="text-sm text-gray-600 mt-1">
                          <span class="font-semibold">CNPJ:</span> <%= escola.cnpj.present? ? escola.cnpj : "Não informado" %>
                        </p>
                        <p class="text-sm text-gray-600">
                          <span class="font-semibold">Turmas:</span> <%= escola.turmas.count %>
                        </p>
                      </div>
                    </div>
                    
                    <div class="card-actions justify-end">
                      <div class="flex gap-2">
                        <%= link_to escola_path(escola), class: "btn btn-ghost btn-sm text-blue-600 hover:text-blue-800", title: "Ver escola" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          </svg>
                        <% end %>
                        <%= link_to edit_escola_path(escola), class: "btn bg-gradient-to-r from-blue-500 to-teal-500 hover:from-blue-600 hover:to-teal-600 text-white border-0 btn-sm", title: "Editar escola" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                          </svg>
                        <% end %>
                        <label for="delete-modal-<%= escola.id %>" class="btn btn-error btn-sm" title="Excluir escola">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                          </svg>
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Delete Modals (shared between desktop and mobile) -->
            <% @escolas.each do |escola| %>
              <input type="checkbox" id="delete-modal-<%= escola.id %>" class="modal-toggle" />
              <div class="modal">
                <div class="modal-box">
                  <h3 class="font-bold text-lg text-error">Confirmar Exclusão</h3>
                  <p class="py-4">
                    Tem certeza que deseja excluir a escola <strong><%= escola.nome %></strong>?
                    <br>
                    <span class="text-warning text-sm">Esta ação não pode ser desfeita e excluirá todas as turmas e alunos associados.</span>
                  </p>
                  
                  <div class="form-control w-full mb-4">
                    <label class="label">
                      <span class="label-text font-semibold">Digite o nome da escola para confirmar:</span>
                    </label>
                    <input 
                      type="text" 
                      placeholder="<%= escola.nome %>" 
                      class="input input-bordered w-full confirm-name-input" 
                      data-escola-id="<%= escola.id %>"
                      data-escola-name="<%= escola.nome %>"
                    />
                  </div>
                  
                  <div class="modal-action">
                    <label for="delete-modal-<%= escola.id %>" class="btn btn-ghost">Cancelar</label>
                    <%= link_to "Excluir", escola_path(escola), 
                        class: "btn btn-error", 
                        id: "delete-btn-#{escola.id}", 
                        style: "pointer-events: none; opacity: 0.5;",
                        data: { 
                          turbo_method: :delete
                        } %>
                  </div>
                </div>
                <label class="modal-backdrop" for="delete-modal-<%= escola.id %>"></label>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-12">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-gray-400 mb-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75z" />
              </svg>
              <h3 class="text-xl font-semibold text-gray-600 mb-2">Nenhuma escola cadastrada</h3>
              <p class="text-gray-500 mb-4">Comece criando a primeira escola</p>
              <%= link_to "Criar Primeira Escola", new_escola_path, class: "btn bg-gradient-to-r from-blue-500 to-teal-500 hover:from-blue-600 hover:to-teal-600 text-white border-0" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Criar Primeira Escola
              <% end %>
            </div>
          <% end %>
        </div>
      </main>
    </div>

  </div>

  
  <aside class="drawer-side">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>

    <div class="menu p-4 w-72 min-h-full bg-white text-base-content">
      <h1 class="text-2xl font-bold mb-8 px-4">
        Dashboard
      </h1>
      
      <ul>
        <li class="mb-2">
          <%= link_to escolas_path, class: "block p-3 rounded-lg hover:bg-gray-100 bg-gray-100" do %>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-3">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 9l9-6 9 6m-1.5 12V10.332A48.36 48.36 0 0012 9.75c-2.551 0-5.056.2-7.5.582V21M3 21h18M12 6.75h.008v.008H12V6.75z" />
              </svg>
              Escolas
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </aside>
</div>

<script>
  function validateDeleteConfirmation(escolaId) {
    const confirmNameInput = document.querySelector(`.confirm-name-input[data-escola-id="${escolaId}"]`);
    const deleteButton = document.getElementById(`delete-btn-${escolaId}`);
    const escolaName = confirmNameInput.getAttribute('data-escola-name');

    if (confirmNameInput.value.trim().toLowerCase() === escolaName.trim().toLowerCase()) {
      deleteButton.style.pointerEvents = 'auto';
      deleteButton.style.opacity = '1';
    } else {
      deleteButton.style.pointerEvents = 'none';
      deleteButton.style.opacity = '0.5';
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const confirmNameInputs = document.querySelectorAll('.confirm-name-input');

    confirmNameInputs.forEach(input => {
      input.addEventListener('input', () => {
        const escolaId = input.getAttribute('data-escola-id');
        validateDeleteConfirmation(escolaId);
      });
    });
  });
</script>
