<div class="drawer lg:drawer-open bg-gray-100">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />

  <div class="drawer-content flex flex-col items-center">
    
    <div class="w-full p-4">
      <div class="flex items-center mb-6 lg:hidden">
        <label for="my-drawer" class="btn btn-square btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </label>
        <h1 class="text-xl font-bold ml-2"><%= @escola.nome %></h1>
      </div>

      <main class="w-full max-w-6xl mx-auto">
        <div class="text-sm breadcrumbs mb-4">
          <ul>
            <li><%= link_to "Escolas", escolas_path, class: "text-blue-600 hover:text-blue-800" %></li>
            <li class="text-gray-500"><%= @escola.nome %></li>
          </ul>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md">
          <div class="flex justify-between items-center mb-6 border-b pb-4">
            <h2 class="text-2xl font-bold text-gray-800">Turmas da Escola</h2>
            <%= link_to new_escola_turma_path(@escola), class: "btn btn-primary", title: "Adicionar nova turma" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
              Nova Turma
            <% end %>
          </div>

          <% if @escola.turmas.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @escola.turmas.each do |turma| %>
                <div class="card bg-base-100 shadow-md border hover:shadow-lg transition-shadow">
                  <div class="card-body">
                    <h3 class="card-title text-lg">
                      <%= turma.nome %>
                      <div class="badge bg-teal-300"><%= turma.serie %>º ano</div>
                    </h3>
                    <p class="text-gray-600 mb-2">
                      <span class="badge badge-outline"><%= turma.turno.humanize %></span>
                    </p>
                    <div class="flex items-center gap-2 mb-4">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                      </svg>
                      <span class="text-sm text-gray-600"><%= turma.alunos.count %> alunos</span>
                    </div>
                    <div class="card-actions justify-end">
                      <%= link_to escola_turma_path(@escola, turma), class: "btn bg-teal-400 btn-sm", title: "Ver detalhes da turma" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                      <% end %>
                      <%= link_to escola_turma_alunos_path(@escola, turma), class: "btn btn-info btn-sm", title: "Ver alunos da turma" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-gray-400 mb-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
              </svg>
              <h3 class="text-xl font-semibold text-gray-600 mb-2">Nenhuma turma cadastrada</h3>
              <p class="text-gray-500 mb-4">Comece criando a primeira turma desta escola</p>
              <%= link_to new_escola_turma_path(@escola), class: "btn btn-primary" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Criar Primeira Turma
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md mb-6 mt-4">
          <div class="flex justify-between items-center mb-6 border-b pb-4">
            <h2 class="text-2xl font-bold text-gray-800">Alunos da Escola</h2>
            <%= link_to new_escola_aluno_path(@escola), class: "btn bg-green-500 hover:bg-green-600 text-white", title: "Adicionar novo aluno" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
              Novo Aluno
            <% end %>
          </div>

          <% if @alunos.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
              <% @alunos.limit(6).each do |aluno| %>
                <% if aluno.turma.present? %>
                  <!-- Aluno Alocado - Verde -->
                  <div class="card bg-gradient-to-br from-green-50 to-green-100 shadow-lg border border-green-200 hover:shadow-xl transition-all duration-300">
                    <div class="card-body p-6">
                      <div class="flex justify-between items-start mb-4">
                        <div class="flex-1 min-w-0">
                          <h3 class="card-title text-lg font-bold text-green-800 truncate">
                            <%= aluno.nome %>
                          </h3>
                          <p class="text-sm text-green-700 mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline mr-1">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5a2.25 2.25 0 002.25-2.25m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5a2.25 2.25 0 012.25 2.25v7.5" />
                            </svg>
                            <%= aluno.data_nascimento.present? ? aluno.data_nascimento.strftime("%d/%m/%Y") : "Data não informada" %>
                          </p>
                          <p class="text-sm text-green-700 mt-1 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline mr-1 flex-shrink-0">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                            </svg>
                            <span class="truncate"><%= aluno.turma.nome %></span>
                          </p>
                        </div>
                        <div class="flex-shrink-0 ml-3">
                          <span class="badge bg-green-500 text-white text-xs px-2 py-1 whitespace-nowrap">Alocado</span>
                        </div>
                      </div>
                      
                      <div class="card-actions justify-end pt-2 border-t border-green-200">
                        <%= link_to escola_aluno_path(@escola, aluno), class: "btn btn-ghost btn-sm text-green-600 hover:text-green-800 hover:bg-green-100", title: "Ver aluno" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% else %>
                  <!-- Aluno Não Alocado - Cinza -->
                  <div class="card bg-gradient-to-br from-gray-50 to-gray-100 shadow-lg border border-gray-200 hover:shadow-xl transition-all duration-300">
                    <div class="card-body p-6">
                      <div class="flex justify-between items-start mb-4">
                        <div class="flex-1 min-w-0">
                          <h3 class="card-title text-lg font-bold text-gray-800 truncate">
                            <%= aluno.nome %>
                          </h3>
                          <p class="text-sm text-gray-600 mt-1">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline mr-1">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5a2.25 2.25 0 002.25-2.25m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5a2.25 2.25 0 012.25 2.25v7.5" />
                            </svg>
                            <%= aluno.data_nascimento.present? ? aluno.data_nascimento.strftime("%d/%m/%Y") : "Data não informada" %>
                          </p>
                          <p class="text-sm text-gray-500 mt-1 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline mr-1 flex-shrink-0">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728" />
                            </svg>
                            <span>Sem turma</span>
                          </p>
                        </div>
                        <div class="flex-shrink-0 ml-3">
                          <span class="badge bg-gray-500 text-white text-xs px-2 py-1 whitespace-nowrap">Não Alocado</span>
                        </div>
                      </div>
                      
                      <div class="card-actions justify-end pt-2 border-t border-gray-200">
                        <%= link_to escola_aluno_path(@escola, aluno), class: "btn btn-ghost btn-sm text-gray-600 hover:text-gray-800 hover:bg-gray-100", title: "Ver aluno" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
            
            <!-- Ver mais link -->
            <div class="text-center">
              <%= link_to escola_alunos_path(@escola), class: "btn btn-outline btn-primary" do %>
                Ver mais
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-gray-400 mb-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
              </svg>
              <h3 class="text-xl font-semibold text-gray-600 mb-2">Nenhum aluno cadastrado</h3>
              <p class="text-gray-500 mb-4">Comece adicionando o primeiro aluno desta escola</p>
              <%= link_to new_escola_aluno_path(@escola), class: "btn bg-green-500 hover:bg-green-600 text-white" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Criar Primeiro Aluno
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-md mb-6 mt-4">
          <div class="flex justify-between items-center mb-6 border-b pb-4">
            <div>
              <h1 class="text-3xl font-bold text-gray-800"><%= @escola.nome %></h1>
              <p class="text-gray-600 mt-1">CNPJ: <%= @escola.cnpj.present? ? @escola.cnpj : "Não informado" %></p>
            </div>
            <div class="flex gap-2">
              <%= link_to edit_escola_path(@escola), class: "btn btn-warning text-white", title: "Editar escola" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
                Editar
              <% end %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="stat bg-blue-50 rounded-lg p-4">
              <div class="stat-title text-blue-600">Total de Turmas</div>
              <div class="stat-value text-blue-800"><%= @escola.turmas.count %></div>
            </div>
            <div class="stat bg-green-50 rounded-lg p-4">
              <div class="stat-title text-green-600">Total de Alunos</div>
              <div class="stat-value text-green-800"><%= @escola.turmas.joins(:alunos).count %></div>
            </div>
            <div class="stat bg-purple-50 rounded-lg p-4">
              <div class="stat-title text-purple-600">Média por Turma</div>
              <div class="stat-value text-purple-800">
                <% total_alunos = @escola.turmas.joins(:alunos).count %>
                <% total_turmas = @escola.turmas.count %>
                <%= total_turmas > 0 ? (total_alunos.to_f / total_turmas).round(1) : 0 %>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

  </div>

  
  <aside class="drawer-side">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>

    <div class="menu p-4 w-72 min-h-full bg-white text-base-content">
      <h1 class="text-2xl font-bold mb-8 px-4">
        Dashboard
      </h1>
      
      <ul>
        <li class="mb-2">
          <%= link_to escolas_path, class: "block p-3 rounded-lg hover:bg-gray-100" do %>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-3">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8.25M15.75 21v-8.25M8.25 21v-8.25M3 21h18M12 6.75h.008v.008H12V6.75z" />
              </svg>
              Escolas
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </aside>
</div>
