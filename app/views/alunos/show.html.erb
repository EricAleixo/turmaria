<% content_for :title, "Showing aluno" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing aluno</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Data de Nascimento</h3>
        <p class="text-lg text-gray-800"><%= @aluno.data_nascimento.present? ? @aluno.data_nascimento.strftime("%d/%m/%Y") : "NÃ£o informado" %></p>
      </div>
    </div>
    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Escola</h3>
        <p class="text-lg text-gray-800"><%= @escola.nome %></p>
      </div>
      <div>
        <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Turma</h3>
        <p class="text-lg text-gray-800"><%= @turma.nome %> - <%= @turma.turno.humanize %></p>
      </div>
    </div>
  </div>

  <%= link_to "Edit this aluno", edit_escola_turma_aluno_path(@escola, @turma, @aluno), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gradient-to-r from-yellow-500 to-orange-500 text-white hover:from-yellow-600 hover:to-orange-600 inline-block font-medium" %>
  <%= link_to "Back to alunos", escola_turma_alunos_path(@escola, @turma), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-green-500 hover:bg-green-600 text-white inline-block font-medium" %>
  <%= button_to "Destroy this aluno", escola_turma_aluno_path(@escola, @turma, @aluno), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
