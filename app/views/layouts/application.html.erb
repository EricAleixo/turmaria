        <%= link_to root_path do%>
          <h1 class="text-xl font-bold md:text-4xl transition-colors duration-300 hover:text-primary
                      sm:text-3xl
                      lg:text-4xl">Turmaria</h1>
        <% end %>
        </div>
      <div class="mt-2">
        <nav class="space-x-0.5
                      md:space-x-5">
          <a href="#" class="text-sm text-black hover:underline hover:text-blue-500 transition-colors duration-400">Escolas</a>
          <a href="#" class="text-sm text-black hover:underline hover:text-blue-500 transition-colors duration-400">Alunos</a>
          <a href="#" class="text-sm text-black hover:underline hover:text-blue-500 transition-colors duration-400">Professores</a>
          <button class="w-11 h-7 btn btn-primary shadow-none
                          sm:w-15 h-10">Entrar</button>
        </nav>
      </div>
    </header>
    <main>
      <% if notice.present? %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <%= yield %>
    </main>

    <footer class="w-full bg-gray-900 text-white flex flex-col items-center justify-center p-5 ">
